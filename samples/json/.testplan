# Run this testplan with:
#   $ ./runsamples.sh samples/json/.testplan

# jsoncheck will test json_matcher class
[jsoncheck]
jsoncheck %*.json% <0> @.%.out
jsoncheck - <%*.json% <0> @.%.out

[jsoncheck.quiet]
jsoncheck -q %*.json% <0> @.%.out
jsoncheck -q - <%*.json% <0> @.%.out

# jsonformat will test json_parser class
[jsonformat]
jsonformat <%*.json% <0> @.%.out
jsonformat - <%*.json% <0> @.%.out

[jsonformat.compact]
jsonformat -c <%*.json% <0> @.%.out
jsonformat -c - <%*.json% <0> @.%.out
